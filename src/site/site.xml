<?xml version="1.0" encoding="UTF-8"?>
<project name="${project.artifactId}" xmlns="http://maven.apache.org/DECORATION/1.3.0"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.3.0.xsd">

	<bannerLeft>
		<!-- Reflow Maven Skin, but with "Reflow" highlighted -->
		<name>
			${project.artifactId}
</name>
		<href>${project.url}</href>
	</bannerLeft>
	<publishDate position="bottom" format="yyyy-MM-dd" />
	<version position="bottom" />
	<skin>
		<groupId>lt.velykis.maven.skins</groupId>
		<artifactId>reflow-maven-skin</artifactId>
		<version>1.0.0</version>
	</skin>
	<custom>
		<reflowSkin>
			<theme>bootswatch-spacelab</theme>
			<highlightJs>true</highlightJs>
			<brand>
				<name>
					${project.artifactId}
				</name>
				<href>${project.url}</href>
			</brand>
			<slogan>${project.description}</slogan>
			<titleTemplate>%2$s | %1$s</titleTemplate>
			<toc>top</toc>
			<topNav>Main|Documentation|reports</topNav>
			<bottomNav>
				<column>Main|Contribute</column>
				<column>Documentation</column>
				<column>reports|modules</column>
			</bottomNav>
			<bottomDescription>
				This is a very good project doing interesting and valuable things.
</bottomDescription>
			<pages>
				<index>
					<titleTemplate>${project.artifactId} for Spout Server</titleTemplate>
					<breadcrumbs>false</breadcrumbs>
					<toc>false</toc>
					<sections>
						<carousel />
						<body />
						<sidebar />
						<!-- <thumbs>2</thumbs> -->
						<columns>2</columns>
					</sections>
				</index>
				
				<!-- Each section name is the same as a report generated by maven -->
				<developer-info>
					<toc>sidebar</toc>
				</developer-info>
				<integration>
					<toc>false</toc>
				</integration>
				<issue-tracking>
					<toc>false</toc>
				</issue-tracking>

				<!-- Each section name is the same as your page names in markdown folder -->
				<command>
					<toc>sidebar</toc>
					<breadcrumbs>true</breadcrumbs>
				</command>
				<annotation>
					<toc>sidebar</toc>
					<breadcrumbs>true</breadcrumbs>
				</annotation>
				<permission>
					<toc>sidebar</toc>
					<breadcrumbs>true</breadcrumbs>
				</permission>
				<usage>
					<toc>sidebar</toc>
					<breadcrumbs>true</breadcrumbs>
				</usage>
			</pages>
		</reflowSkin>
	</custom>
	<body>
		<head>
		</head>
  
		<links>
			<item name="Download" href="download.html" />
		</links>

		<breadcrumbs>
			<item name="${project.artifactId}" href="/" />
		</breadcrumbs>
  
		<menu name="Main" inherit="top">
			<item name="Home" href="./" />
			<item name="GitHub project" href="${project.scm.url}" />
			<item name="Release notes" href="changes-report.html" />
		</menu>
		<menu name="Download" inherit="top">
			<item name="Download" href="download.html" />
			<!-- <item name="License" href="license.html" /> -->
		</menu>
		<menu name="Documentation" inherit="bottom">
			<item name="Annotations" href="annotation.html" />
			<item name="Commands" href="command.html" />
			<item name="Permissions" href="permission.html" />
			<item name="Usage" href="usage.html" />
		</menu>
		<menu name="Contribute" inherit="bottom">
			<item name="Contribute" href="contribute.html" />
			<item name="Issues" href="${project.issueManagement.url}" />
			<item name="Fork on GitHub" href="${project.scm.url}" />
			<item name="Donate" href="" />
		</menu>
		<menu name="Maven Documentation" ref="reports" inherit="bottom"/>
	</body>
</project>